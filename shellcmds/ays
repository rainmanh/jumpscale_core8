#!/usr/bin/env jspython

from JumpScale import j

import click

atyourservice=j.atyourservice.get("ays",j.sal.fs.getcwd())

@click.group()
@click.option('--nodebug', default=False, help='disable debug mode', is_flag=True)
def cli(nodebug):
    atyourservice.debug = not nodebug

